{
	"env": {
		"es2020": true,
		"node": true
	},
	"extends": ["eslint:recommended", "airbnb-base", "plugin:node/recommended-module", "plugin:import/errors", "plugin:import/warnings", "prettier"],
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"rules": {
		"no-use-before-define": ["error", {"functions": false, "classes": true}],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "all",
				"ignoreRestSiblings": false,
				"argsIgnorePattern": "[request, response]"
			}
		],
		"max-classes-per-file": 0
	}
}
